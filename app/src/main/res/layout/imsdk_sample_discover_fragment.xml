<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imsdk_sample_color_white_grey_background">

    <com.idonans.systeminsets.SystemInsetsFrameLayout
        android:id="@+id/top_system_insets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:systemInsetPaddingTop="all"
        app:systemInsetPaddingTopNotConsume="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/imsdk_sample_main_top_bar_height" />
    </com.idonans.systeminsets.SystemInsetsFrameLayout>

    <Button
        android:id="@+id/user_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user: 100"
        app:layout_constraintTop_toBottomOf="@id/top_system_insets"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/user_101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user: 101"
        app:layout_constraintTop_toBottomOf="@id/user_100"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/user_102"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user: 102"
        app:layout_constraintTop_toBottomOf="@id/user_101"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>