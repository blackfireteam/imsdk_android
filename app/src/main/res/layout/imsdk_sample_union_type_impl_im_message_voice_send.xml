<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#fff2f4f5">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="12sp"
        tools:text="17:30" />

    <com.masonsoft.imsdk.sample.widget.IMMessageRevokeStateFrameLayout
        android:id="@+id/message_revoke_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.masonsoft.imsdk.sample.widget.IMMessageRevokeTextView
            android:id="@+id/message_revoke_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#ffb2b2b2"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:alignItems="flex_start"
                app:flexDirection="row_reverse">

                <com.masonsoft.imsdk.sample.widget.UserCacheAvatar
                    android:id="@+id/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    app:layout_flexGrow="0"
                    app:layout_flexShrink="0" />

                <com.masonsoft.imsdk.sample.widget.ResizeVoiceView
                    android:id="@+id/resize_voice_view"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/imsdk_sample_chat_bubble_send"
                    android:minWidth="100dp"
                    app:layout_flexGrow="0"
                    app:layout_flexShrink="1">

                    <ImageView
                        android:id="@+id/voice_image_flag"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/imsdk_sample_voice_msg_playing_3" />

                    <TextView
                        android:id="@+id/voice_duration_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="50dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="120''" />
                </com.masonsoft.imsdk.sample.widget.ResizeVoiceView>

                <com.masonsoft.imsdk.sample.widget.IMMessageSendStatusView
                    android:id="@+id/send_status_view"
                    android:layout_width="42dp"
                    android:layout_height="22dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:layout_alignSelf="center"
                    app:layout_flexGrow="0"
                    app:layout_flexShrink="0" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.masonsoft.imsdk.sample.widget.IMMessageReadStatusView
                android:id="@+id/read_status_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="65dp" />
        </LinearLayout>
    </com.masonsoft.imsdk.sample.widget.IMMessageRevokeStateFrameLayout>

    <com.masonsoft.imsdk.sample.widget.debug.MessageDebugView
        android:id="@+id/message_debug_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>